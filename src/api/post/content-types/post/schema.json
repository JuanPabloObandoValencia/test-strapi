{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": "Artículos de documentación y contenido estructurado"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "content-manager": {
      "visible": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "summary": {
      "type": "text",
      "description": "Resumen corto del artículo"
    },
    "content": {
      "type": "richtext",
      "description": "Contenido principal del post con secciones y subtítulos"
    },
    "table_of_contents": {
      "type": "json",
      "description": "Índice de contenidos generado o manual"
    },
    "published_date": {
      "type": "datetime"
    },
    "reading_time": {
      "type": "integer",
      "description": "Tiempo estimado de lectura en minutos"
    },
    "is_featured": {
      "type": "boolean",
      "default": false
    },
    "cover_image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "profile": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::profile.profile",
      "inversedBy": "posts"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "posts"
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "posts"
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    }
  }
}